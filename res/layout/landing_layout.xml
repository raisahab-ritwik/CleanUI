<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F1F9"
    android:orientation="vertical"
    android:weightSum="15" >

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#16161c"
        android:orientation="horizontal"
        android:weightSum="10" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            layout="@layout/header_layout" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_weight="5"
            android:background="#0c5679"
            android:onClick="onLogoutClicked"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:shadowColor="#dd000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="Logout"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.8"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_mainBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:background="@drawable/transparent_border_box"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:layout_marginTop="13dp"
                    android:text="District"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_district"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:layout_marginTop="13dp"
                    android:text="Scheme Type"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_schemeType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:layout_marginTop="13dp"
                    android:text="Scheme Name"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_schemeName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:layout_marginTop="13dp"
                    android:text="Form Name"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_formName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:gravity="center"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_btn_selector"
                        android:onClick="onPostClicked"
                        android:shadowColor="#dd000000"
                        android:shadowDx="-1"
                        android:shadowDy="-1"
                        android:shadowRadius="2"
                        android:text="SUBMIT"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_mainBody"
                android:layout_marginLeft="10dp"
                android:background="#E5F1F9"
                android:padding="3dp"
                android:text=" DASHBOARD "
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#555555" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_offlineDataSync"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/grey_bg"
        android:onClick="onOfflineDataSyncClicked"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:shadowColor="#dd000000"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2"
        android:text="OFFLINE DATA SYNC"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0c5679" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by "
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cyber-SWIFT"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>