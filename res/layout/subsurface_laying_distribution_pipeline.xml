<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F1F9"
    android:orientation="vertical"
    android:weightSum="15" >

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#16161c"
        android:orientation="horizontal"
        android:weightSum="10" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            layout="@layout/header_layout" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_weight="5"
            android:background="#0c5679"
            android:onClick="onLogoutClicked"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:shadowColor="#dd000000"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="2"
            android:text="Logout"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.8"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_mainBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:background="@drawable/transparent_border_box"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:paddingTop="5dp"
                    android:text="Type"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Diameter"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_diameter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Pipe Number"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etPipeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="From Node"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_FromNode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="To Node"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_ToNode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Position from Road center"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_positionFromRoadCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Depth of cushion (M)"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etDepthOfCushion"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Work progress/ Status"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etWorkProgress"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Laying Completed"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDownLayingCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Laying yet to be started"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDownLayingToBeStarted"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Summary of Pipeline Laying"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etSummaryOfPipelineLaying"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Type/Nature of valve"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etTypeOfValve"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Diameter"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etValveDiameter"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Date of Installation"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:id="@+id/rlDateOfInstallation"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <TextView
                        android:id="@+id/tvDateOfInstallation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Position of Valve"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <com.cyberswift.phe.dropdown.DropDownViewForXML
                        android:id="@+id/dropDown_positionOfValve"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333"
                        android:textColorHint="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dropdown_arrow_4" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Concerned AE"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etConcernedAE"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Concerned SAE"
                    android:textColor="#555555" />

                <EditText
                    android:id="@+id/etConcernedSAE"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@drawable/darkblue_border_box"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:textColorHint="#347B8F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Date of commencement of Trial Run"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:id="@+id/rlDateOfCommencementOfTrialRun"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <TextView
                        android:id="@+id/tvDateOfCommencementOfTrialRun"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Date of completion of Trial Run"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:id="@+id/rlDateOfCompletionOfTrialRun"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <TextView
                        android:id="@+id/tvDateOfCompletionOfTrialRun"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Expected Date of Commissioning of the scheme"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:id="@+id/rlExpectedDateOfCommisioningOfTheScheme"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <TextView
                        android:id="@+id/tvExpectedDateOfCommisioningOfTheScheme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Actual Date of Commissioning of the scheme"
                    android:textColor="#555555" />

                <RelativeLayout
                    android:id="@+id/rlActualDateOfCommisioningOfTheScheme"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_border_box" >

                    <TextView
                        android:id="@+id/tvActualDateOfCommisioningOfTheScheme"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="35dp"
                        android:singleLine="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="31.5dp"
                        android:layout_height="31.5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/transparent_border_box"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Latitude"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/tv_latitude"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="3"
                                android:background="@drawable/grey_border_box"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#333333"
                                android:textColorHint="#888888" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="4" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Longitude"
                                android:textColor="#333333" />

                            <TextView
                                android:id="@+id/tv_longitude"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_weight="3"
                                android:background="@drawable/grey_border_box"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:singleLine="true"
                                android:textAllCaps="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#333333"
                                android:textColorHint="#888888" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/blue_btn_selector"
                            android:onClick="onLocationClicked"
                            android:paddingBottom="10dp"
                            android:paddingLeft="13dp"
                            android:paddingRight="13dp"
                            android:paddingTop="10dp"
                            android:shadowColor="#dd000000"
                            android:shadowDx="-1"
                            android:shadowDy="-1"
                            android:shadowRadius="2"
                            android:text="GET LOCATION"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:background="#E5F1F9"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Location"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#888888" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:gravity="center"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_btn_selector"
                        android:onClick="onPostClicked"
                        android:shadowColor="#dd000000"
                        android:shadowDx="-1"
                        android:shadowDy="-1"
                        android:shadowRadius="2"
                        android:text="SUBMIT"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ll_mainBody"
                android:layout_marginLeft="10dp"
                android:background="#E5F1F9"
                android:padding="3dp"
                android:text=" Laying of Distribution System "
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#555555" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0c5679" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_splashText"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by "
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cyber-SWIFT"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>